@model LeeftSamen.Portal.Web.Models.FileUploadModel

<div class="form-group profile-img-upload">
    <label class="col-md-3 control-label">@Html.Raw(Model.InputLabel)</label>

    <div class="col-md-9">
        @if (Model.FileId.HasValue)
        {
            <img src="@Url.RouteUrl(Model.RouteName, Model.RouteValues)" alt="" class="maxWidthFull">
        }

        <span class="btn btn-default btn-small btn-file">
            @Button.ChooseImageFromPC <input type="file" name="@Model.InputName" class="file-input" accept="image/gif, image/jpeg, image/png">
        </span>
        &nbsp;
        <b class="file-input-filename"></b>
        @Html.ValidationMessage(Model.InputName, null, new { @class = "help-block" })
    </div>
</div>