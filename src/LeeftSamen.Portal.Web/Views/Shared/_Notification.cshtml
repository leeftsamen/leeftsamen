@using LeeftSamen.Portal.Web.Helpers
@{
    if (TempData[Constants.NotificationTypeKey] != null && TempData[Constants.NotificationMessageKey] != null)
    {
        var state = string.Empty;
        var switchId = (TempDataHelper.NotificationType)int.Parse(TempData[Constants.NotificationTypeKey].ToString());
        switch (switchId)
        {
            case TempDataHelper.NotificationType.Success:
                state = "success";
                break;
            case TempDataHelper.NotificationType.Danger:
                state = "danger";
                break;
            case TempDataHelper.NotificationType.Warning:
                state = "warning";
                break;
            case TempDataHelper.NotificationType.Info:
                state = "info";
                break;
        }

        <div class="alert alert-@state">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            @Html.Raw(TempData[Constants.NotificationMessageKey].ToString())
        </div>
    }
}
