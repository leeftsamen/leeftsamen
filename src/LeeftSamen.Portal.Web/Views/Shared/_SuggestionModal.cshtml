@model LeeftSamen.Portal.Web.Models.Suggestion.SuggestionModalViewModel

<div class="modal fade" id="suggestionModal" tabindex="-1" role="dialog" aria-hidden="true" ng-controller="SuggestionController">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="@Button.Cancel"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">@Title.SuggestionModalTitle</h4>
                <div class="row">
                    <div class="col-md-10">
                        <p>@Html.Raw(Title.SuggestionModalSubtitle)</p>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm("Index", "Suggestion", null, FormMethod.Post, new { @ng_submit = "submit($event)" }))
            {
                <div class="modal-body">

                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.RequiredLabelFor(m => m.SubjectListItems, new {@class = "control-label"})
                        @Html.DropDownListFor(m => m.Subject, Model.SubjectListItems, new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.Subject, null, new {@class = "help-block"})
                    </div>

                    <div class="form-group">
                        @Html.RequiredLabelFor(m => m.Suggestion, new {@class = "control-label"})
                        @Html.TextAreaFor(m => m.Suggestion, new {@class = "form-control", @rows = 10})
                        @Html.ValidationMessageFor(m => m.Suggestion, null, new {@class = "help-block"})
                    </div>

                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">@Button.Close</button>
                    <button type="submit" class="btn btn-primary">@Button.Send</button>
                </div>
            }
        </div>
    </div>
</div>