<div class="modal fade" id="modalReportAbuse" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="@Url.Action("Index", "ReportAbuse")" method="post">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="@Button.Cancel"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">@Title.ReportAbuse</h4>
                </div>
                <div class="modal-body">
                    <p>@Text.ReportAbuse</p>
                    <label for="ReportDescription" class="control-label">@Label.Description</label>
                    <textarea name="ReportDescription" class="form-control" placeholder="@PlaceHolder.ReportDescription"></textarea>
                </div>
                <div class="modal-footer">
                    @Html.AntiForgeryToken()
                    <button type="submit" name="ReportAbuse" value="1" class="btn btn-primary">@Button.ReportAbuse</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">@Button.Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
