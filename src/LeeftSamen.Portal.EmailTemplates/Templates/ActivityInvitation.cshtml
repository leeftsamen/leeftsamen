@using LeeftSamen.Common.InterfaceText
@inherits RazorEngine.Templating.TemplateBase<LeeftSamen.Portal.EmailTemplates.Models.ActivityInvitationModel>
@{
    Layout = "_Layout";
}

<p style="margin-top:0;margin-bottom:16px">@string.Format(Email.DefaultSaluation, (string.IsNullOrWhiteSpace(Model.Name) ? "heer/mevrouw" : Model.Name))</p>
<p style="margin-top:0;margin-bottom:16px">@string.Format(Email.ActivityInvitationInstruction, Model.InvitedByName, Model.ActivityTitle)</p>
<p style="margin-top:0;margin-bottom:48px;text-align:center">
    <a href="@Model.ViewInvitationUrl" style="font-size:24px">@Email.ViewInvitationLinkText</a>
</p>
<p style="margin-top:0;margin-bottom:16px">@Raw(Email.DefaultCloseHtml)</p>

@section reason {
    @Email.CircleInvitationReason
}