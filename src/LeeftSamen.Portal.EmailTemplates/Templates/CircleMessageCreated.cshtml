@using LeeftSamen.Common.InterfaceText
@inherits RazorEngine.Templating.TemplateBase<LeeftSamen.Portal.EmailTemplates.Models.CircleMessageCreatedModel>
@{
    Layout = "_Layout";
}

<p style="margin-top:0;margin-bottom:16px">@Raw(string.Format(Email.CircleMessageCreated, Model.Name, Model.CircleName))</p>
<p style="margin-top:0;margin-bottom:48px;text-align:center">
    <a href="@Model.MessageUrl" style="font-size:24px">@Email.CircleMessageLinkText</a>
</p>
<p style="margin-top:0;margin-bottom:16px">@Raw(Email.DefaultCloseHtml)</p>

@section reason {
    @Email.CircleJobAssignedReason
}