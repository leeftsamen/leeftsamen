@using LeeftSamen.Common.InterfaceText
@inherits RazorEngine.Templating.TemplateBase<LeeftSamen.Portal.EmailTemplates.Models.ResetPasswordModel>
@{
    Layout = "_Layout";
}

<p style="margin-top:0;margin-bottom:16px">@string.Format(Email.DefaultSaluation, Model.Name)</p>
<p style="margin-top:0;margin-bottom:16px">@Email.ResetPasswordInstruction</p>
<p style="margin-top:0;margin-bottom:48px;text-align:center">
    <a href="@Model.ResetPasswordUrl" style="font-size:24px">@Email.ResetPasswordLinkText</a>
</p>
<p style="margin-top:0;margin-bottom:16px">@Raw(Email.DefaultCloseHtml)</p>

@section reason {
    @Email.ResetPasswordReason
}