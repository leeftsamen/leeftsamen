@using System
@using LeeftSamen.Common.InterfaceText
@inherits RazorEngine.Templating.TemplateBase<LeeftSamen.Portal.EmailTemplates.Models.BaseModel>
@if (Model.Company == "comunios")
{
    <!DOCTYPE html>
    <html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
        <title>@Model.Subject</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body style="margin:0;padding:0" link="#0DA7A3" vlink="#0DA7A3">
        <table cellpadding="0" cellspacing="0" border="0" width="100%" style="background-color:#F3F5F7">
            <tr style="background-color:#fff;">
                <td height="80" style="border-bottom:1px solid #DADEE5;"></td>
                <td style="border-bottom:1px solid #DADEE5;">
                    <table cellpadding="0" cellspacing="0" border="0" width="100%">
                        <tr>
                            <td valign="middle">
                                <img src="cid:logo" />
                            </td>
                            <td align="right" valign="middle" style="padding-bottom: 7px">
                                <i>@DateTime.Now.ToString("d MMMM yyyy")</i>
                            </td>
                        </tr>
                    </table>
                </td>
                <td style="border-bottom:1px solid #DADEE5;"></td>
            </tr>
            <tr>
                <td></td>
                <td width="568" style="padding:16px;" align="center">
                    <table width="100%" border="0" cellpadding="0" cellspacing="0" style="color:#2D2D2D;font-family:Roboto,Calibri,Helvetica,Arial,serif;font-size:16px;line-height:24px;margin:30px 0px">
                        <tr>
                            <td style="background-color:#FFFFFF;border:1px solid #DADEE5;padding:16px;" colspan="3">
                                @RenderBody()
                            </td>
                        </tr>
                    </table>
                </td>
                <td></td>
            </tr>
            <tr style="background-color:#fff;">
                <td height="46" style="border-top:1px solid #DADEE5;"></td>
                <td style="border-top:1px solid #DADEE5;">
                    <table cellpadding="0" cellspacing="0" border="0" width="100%">
                        <tr>
                            <td valign="middle">
                                @if (Model.Company == "comunios")
                                {
                                    <span>Comunios B.V.</span>
                                }
                                else
                                {
                                    <span>Coöperatieve vereniging LeeftSamen - Alle rechten voorbehouden</span>
                                }
                            </td>
                            <td align="right" valign="middle">
                                @if (Model.Company == "comunios")
                                {
                                    <a href="@Model.PortalUrl" style="text-decoration:none;">www.comunios.com</a>
                                }
                                else
                                {
                                    <a href="@Model.PortalUrl" style="text-decoration:none;">www.leeftsamen.nl</a>
                                }
                            </td>
                        </tr>
                    </table>
                </td>
                <td style="border-top:1px solid #DADEE5;"></td>
            </tr>
        </table>
    </body>
</html>
}
else
{
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>@Model.Subject</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body style="margin:0;padding:0" link="#0DA7A3" vlink="#0DA7A3">
    <table cellpadding="0" cellspacing="0" border="0" width="100%" style="background-color:#D7EFFF">
        <tr style="background-color:#fff;">
            <td height="80"></td>
            <td>
                <table cellpadding="0" cellspacing="0" border="0" width="100%">
                    <tr>
                        <td valign="middle">
                            <img src="cid:logo" />
                        </td>
                    </tr>
                </table>
            </td>
            <td></td>
        </tr>
        <tr style="background-color:#F3FAFF;">
            <td height="10" colspan="3"></td>
        </tr>
        <tr style="background-color:#E5F5FF;">
            <td height="25" colspan="3"></td>
        </tr>
        <tr>
            <td></td>
            <td width="568" style="padding:16px;" align="center">
                <table width="100%" border="0" cellpadding="0" cellspacing="0" style="color:#2D2D2D;font-family:Roboto,Calibri,Helvetica,Arial,serif;font-size:16px;line-height:24px;margin:30px 0px;">
                    <tr>
                        <td style="background-color:#FFFFFF;padding:16px;border-top-right-radius:10px;border-top-left-radius:10px;" colspan="3">
                            <div style="text-align:right;color: #3cc;font-size: 13px;line-height:0px;margin:0px;padding:0px;padding-bottom: 13px">
                                @DateTime.Now.ToString("d MMMM yyyy")
                            </div>
                            @RenderBody()
                        </td>
                    </tr>
                    <tr>
                        <td style="background-color:#F7F7F7;background:linear-gradient(#f2f2f2 0px, #f7f7f7 7px, #f7f7f7 100%);border-bottom-right-radius:10px;border-bottom-left-radius:10px;padding:8px 16px;color: #3cc;font-weight: 700;" colspan="3">
                            Team LeeftSamen
                        </td>
                    </tr>
                </table>
                @if (!string.IsNullOrEmpty(Model.EmailSettingsUrl))
                {
                    <i style="font-size:12px;color:#999;">@Raw(string.Format(Email.StopSendingMails, Model.EmailSettingsUrl))</i>
                }
            </td>
            <td></td>
        </tr>
        <tr style="background-color:#fff;">
            <td height="46"></td>
            <td>
                <table cellpadding="0" cellspacing="0" border="0" width="100%">
                    <tr>
                        <td valign="middle">
                            @if (Model.Company == "comunios")
                            {
                                <span>Comunios B.V.</span>
                            }
                            else
                            {
                                <span>Coöperatieve vereniging LeeftSamen - Alle rechten voorbehouden</span>
                            }
                        </td>
                        <td align="right" valign="middle">
                            @if (Model.Company == "comunios")
                            {
                                <a href="@Model.PortalUrl" style="text-decoration:none;">www.comunios.com</a>
                            }
                            else
                            {
                                <a href="@Model.PortalUrl" style="text-decoration:none;">www.leeftsamen.nl</a>
                            }
                        </td>
                    </tr>
                </table>
            </td>
            <td></td>
        </tr>
    </table>
</body>
</html>
}