@using LeeftSamen.Common.InterfaceText
@inherits RazorEngine.Templating.TemplateBase<LeeftSamen.Portal.EmailTemplates.Models.CircleInvitationModel>
@{
    Layout = "_Layout";
}

<p style="margin-top:0;margin-bottom:16px">@string.Format(Email.DefaultSaluation, (string.IsNullOrWhiteSpace(Model.Name) ? "heer/mevrouw" : Model.Name))</p>
<p style="margin-top:0;margin-bottom:16px">@string.Format(Email.CircleInvitationInstruction1, Model.InvitedByName, Model.CircleName)</p>
<p>@Raw(Model.CircleDescription)</p>
@if (!Model.InvitationForUser)
{
    <p>@Raw(string.Format(Email.CircleInvitationNoUser, Model.PortalUrl))</p>
}
<p>@Raw(Email.CircleInvitationInstruction2)</p>
<a href="@Model.AcceptInvitationUrl" style="color:#fff;background-color:#0da7a3;border-color:#0da7a3;border-style:solid;border-width:3px 6px;border-radius:4px;display:inline-block;text-decoration:none;margin-top:10px;text-align:center;vertical-align:middle;margin-bottom:16px;">
    @Email.CircleInvitationAcceptLinkText
</a>
<p style="margin-top:10px;margin-bottom:16px">@Raw(Email.DefaultCloseHtml)</p>

@section reason {
    @Email.CircleInvitationReason
}